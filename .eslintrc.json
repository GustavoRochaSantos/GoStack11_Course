{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars":["error", { "argsIgnorePattern": "^_" }],
	   	"import/extensions": [
	      "error",
	      "ignorePackages",
	      {
	        "ts": "never"
	      }
        ],
        "camelcase": "off",
        "prettier/prettier": "error"
	  },
	  "settings": {
	    "import/resolver": {
	      "typescript": {}
	    }
	  } 
}